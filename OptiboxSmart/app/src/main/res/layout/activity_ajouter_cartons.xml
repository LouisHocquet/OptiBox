                    app:layout_constraintTop_toBottomOf="@+id/tvType1" />

                <Button
                    android:id="@+id/btnRetraitType1"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginTop="8dp"
                    android:text="-"
                    android:textSize="30sp"
